#include <iostream>
#include <cmath>
using namespace std;


int main()
{
ios_base::sync_with_stdio(0);
int a;
cin>>a;
if(a == 1)
{
    cout<<"*";
    return 0;
}
for(int i = 0;i<a;i++)cout<<"*";
cout<<endl;
for(int j = 1;j - 1< a - 2;j++)
{
cout<<"*";
     for(int i = 1;i<a-j-1;i++)cout<<" ";
cout<<"*";
for(int i = 1;i<j;i++)cout<<" ";
if(j > 0)
cout<<"*";
cout<<endl;
}
for(int i = 0;i<a;i++)cout<<"*";
    return 0;
}
