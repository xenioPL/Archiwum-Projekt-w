#include <iostream>
#include <vector>
using namespace std;
vector<vector<int> >G;
int n,m,v,u,z;

int tab[100][2];

int DFS(int wierzholek)
{
    tab[wierzholek][0] = 1;
    for(int i =1;i < n;i++)
        if(G[wierzholek][i] > 0 && tab[i][0] == 0)
    {
        if(tab[i][1] > G[wierzholek][i] + tab[wierzholek][1] || tab[i][1] == 0)
            tab[i][1] = G[wierzholek][i]+ tab[wierzholek][1];
    }
     for(int i =1;i < n;i++)
        if(G[wierzholek][i] > 0 && tab[i][0] == 0)
    {
        DFS(i);
    }
return 0;
}

int main(){

cout<<"Podaj najpierw ilosc punktuf a potem ilosc lini: "<<endl;
cin>>n>>m; 

G.resize(n);
for(int i=0;i<n;i++)
{
    G[i].resize(n);
        for(int j=0;j<n;j++)
            G[i][j]=0;
}
cout<<"Podaj najpierw punkt pierwszy potem drugi a na koniec wartosc: "<<endl;
for(int i=0;i<m;i++){
cin>>v>>u>>z;
G[u][v] = z;
G[v][u] = z;
}
DFS(0);
for(int i = 0; i < n;i++)
{
    cout<<"Droga od 0 do "<<i<<" to "<<tab[i][1]<<endl;
}
return 0;
}
